#include "3-calc.h"
  /**
   * op_add: sum
   * @a: first integer
   * Return: something nice
   * @b: 2nd integer
   * op_sub: something
   * op_div: something
   * op_mup: multi
   * op_mod: something
   */
int op_add(int a, int b)
{
return (a + b);
}
/**
 * op_sub - difference of two integers
 * @a: first number
 * @b: second number
 *
 * Return: operation
 */
int op_sub(int a, int b)
{
return (a - b);
}
/**
 * op_mul - operation
 * @a: first number
 * @b: second number
 *
 * Return: operation
 */
int op_mul(int a, int b)
{
return (a * b);
}
/**
 * op_div - operation
 * @a: first number
 * @b: second number
 *
 * Return: operation
 */
int op_div(int a, int b)
{
if (b == 0)
{
printf("Error\n");
exit(100);
}
else
{
return (a / b);
}
}
/**
 * op_mod - operation
 * @a: first number
 * @b: second number
 *
 * Return: operation
 */
int op_mod(int a, int b)
{
if (b == 0)
{
printf("Error\n");
exit(100);
}
else
{
return (a % b);
}
}
